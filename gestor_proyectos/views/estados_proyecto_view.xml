<odoo>
    <data>
    <!-- explicit list view definition -->
        <record model="ir.ui.view" id="view_estados_proyecto_list">
            <field name="name">Estados Proyectos List</field>
            <field name="model">gestor_proyectos.estados_proyecto</field>
            <field name="arch" type="xml">
                <list>
                    <field name="nombreEstado"/>
                    <field name="descripcionEstado"/>
                </list>
            </field>
        </record>

        <!-- Form view definition -->
        <record model="ir.ui.view" id="view_estados_proyecto_form">
            <field name="name">Estados Proyectos Form</field>
            <field name="model">gestor_proyectos.estados_proyecto</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="nombreEstado"/>
                        <field name="descripcionEstado"/>
                    </group>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_estados_proyecto">
            <field name="name">Estados de Proyectos</field>
            <field name="res_model">gestor_proyectos.estados_proyecto</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem name="Estados de Proyectos" id="menu_estados_proyecto" parent="menu_proyectos"
                action="action_estados_proyecto"/>
    </data>
</odoo>
