<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="view_proyecto_list">
      <field name="name">Proyecto List</field>
      <field name="model">gestor_proyectos.proyecto</field>
      <field name="arch" type="xml">
        <list>
          <field name="nombreProyecto"/>
          <field name="descripcionProyecto"/>
          <field name="fechaInicio"/>
          <field name="fechaFin"/>
          <field name="prioridad"/>
          <field name="responsable"/>
          <field name="progreso"/>
          <field name="estado_id"/> 
        </list>
      </field>
    </record>

    <!-- Form view definition -->
    <record model="ir.ui.view" id="view_proyecto_form">
      <field name="name">Listadpo de Proyecto</field>
      <field name="model">gestor_proyectos.proyecto</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="nombreProyecto"/>
              <field name="descripcionProyecto"/>
              <field name="fechaInicio"/>
              <field name="fechaFin"/>
              <field name="prioridad"/>
              <field name="responsable"/>
              <field name="progreso"/>
              <field name="estado_id"/> 
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="action_proyecto">
      <field name="name">Proyectos</field>
      <field name="res_model">gestor_proyectos.proyecto</field>
      <field name="view_mode">list,form</field>
    </record>

    <!-- Top menu item -->

    <menuitem name="Gestor Proyectos" id="menu_root"/>

    <!-- menu categories -->
    <menuitem name="Proyectos" id="menu_proyectos" parent="menu_root"/>

    <!-- actions -->
    <menuitem name="Lista de Proyectos" id="menu_proyecto_list" parent="menu_proyectos"
              action="action_proyecto"/>
  </data>
</odoo>