    <!-- Top menu item -->
    <menuitem name="Libreria (IES JUAN BOSCO)" id="libreria_b.menu_root"/>
    
    <!-- menu categories -->
    <menuitem name="GestiÃ³n de Libros" id="libreria_b.menu_1" parent="libreria_b.menu_root"/>
    
    <menuitem name="Autores" id="libreria_b.menu_2_list" parent="libreria_b.menu_1" action="libreria_b.autor_action_window"/>

    <!-- actions -->
    <menuitem name="Libros" id="libreria_b.menu_1_list" parent="libreria_b.menu_1"
              action="libreria_b.libro_action_window"/>
    <menuitem name="Editoriales" id="libreria_b.menu_editoriales" parent="libreria_b.menu_1"
